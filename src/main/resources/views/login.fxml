                <Insets left="20.0" right="50.0" />
            </GridPane.margin>
        </PasswordField>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <children>
                <Button fx:id="cancelBtn" cancelButton="true" layoutX="14.0" layoutY="17.0" mnemonicParsing="false" onAction="#handleCancelButtonAction" prefHeight="34.0" prefWidth="60.0" text="取消" AnchorPane.leftAnchor="20.0" />
