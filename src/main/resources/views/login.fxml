            </children>
        </AnchorPane>
        <ImageView fitHeight="59.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@1.jpg" />
            </image>
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </ImageView>
    </children>
