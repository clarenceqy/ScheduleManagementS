            <GridPane.margin>
                <Insets left="20.0" right="50.0" />
            </GridPane.margin>
        </TextField>
        <Label fx:id="passwordLabel" text="密 码：" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
